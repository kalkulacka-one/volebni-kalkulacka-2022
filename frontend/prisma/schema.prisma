generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum AnswersSource {
  web
  embed
}

model Answers {
  id           String        @id @default(uuid())
  updateToken  String        @default(cuid())
  createdAt    DateTime      @default(now()) @db.Timestamptz()
  updatedAt    DateTime      @updatedAt @db.Timestamptz()
  source       AnswersSource @default(web)
  embedName    String?
  calculatorId String
  answers      Json
  matches      Json
  userId       String?
  User         User?         @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId])
}

model User {
  id             String    @id @default(uuid())
  displayName    String?   @db.String(255)
  email          String?   @unique @db.String(255)
  subscribed     Boolean   @default(false)
  authProvider   String?   @db.String(32)
  authProviderId String?   @unique @db.String(255)
  createdAt      DateTime  @default(now()) @db.Timestamptz()
  updatedAt      DateTime  @updatedAt @db.Timestamptz()
  Answers        Answers[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}
